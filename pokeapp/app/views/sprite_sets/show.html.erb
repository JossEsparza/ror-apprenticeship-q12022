<h2>Sprite sets</h2>
<div id="sprite_sets" class="table">
  <table>
    <tr>
      <th><%=sprite_set_title params[:pokemon], params[:variant], @sprite_sets %></th>
      <th>Back Default</th>
      <th>Back Female</th>
      <th>Back Shiny</th>
      <th>Back Shiny Female</th>
      <th>Front Default</th>
      <th>Front Female</th>
      <th>Front Shiny</th>
      <th>Front Shiny Female</th>
    </tr>
      <tr>
        <td><%= @sprite_set.sprites_on.name%></td>
        <td><%= image_tag(@sprite_set.back_default, size: '200x200') if @sprite_set.back_default %></td>
        <td><%= image_tag(@sprite_set.back_female, size: '200x200') if @sprite_set.back_female%></td>
        <td><%= image_tag(@sprite_set.back_shiny, size: '200x200') if @sprite_set.back_shiny %></td>
        <td><%= image_tag(@sprite_set.back_shiny_female, size: '200x200') if @sprite_set.back_shiny_female %></td>
        <td><%= image_tag(@sprite_set.front_default, size: '200x200') if @sprite_set.front_default %></td>
        <td><%= image_tag(@sprite_set.front_female, size: '200x200') if @sprite_set.front_female %></td>
        <td><%= image_tag(@sprite_set.front_shiny, size: '200x200') if @sprite_set.front_shiny %></td>
        <td><%= image_tag(@sprite_set.front_shiny_female, size: '200x200') if @sprite_set.front_shiny_female %></td>
        <td><%= link_to "Edit this sprite set", edit_sprite_set_path(@sprite_set) %> | 
          <%= button_to "Destroy this sprite set", @sprite_set, method: :delete %></td>
      </tr>
  </table>
</div>
