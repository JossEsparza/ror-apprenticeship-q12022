<h2>Variants</h2>
<%= will_paginate @variants %>
<div id="variants">
  <% if @variants.empty? %>
        <p> This Pokemon doesn't have variants</p>
  <% else %>
  <div id="ability_pokemons" class="table_ability">
    <table>
      <tr>
        <th>Pokemon</th>
        <th>Variant</th>
      </tr>
      <% @variants.each do |variant| %>
      <tr>
        <td><%= variant.pokemon_id%></td>
        <td><%= variant.name%></td>
        <td><%= link_to "Edit this variant", edit_variant_path(variant) %> |  
          <%= link_to "Show Sprite Sets", sprite_sets_path(variant: variant)%>|
          <%= link_to "Delete", delete_variant_path(variant)%>
      </tr>
      <% end %>
    </table>
  <% end %>
</div>

<%= link_to "New variant", new_variant_path(pokemon: params[:pokemon]) %>|<%= link_to "Go back", :back %>
