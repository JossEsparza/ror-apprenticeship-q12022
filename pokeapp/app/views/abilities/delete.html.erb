<div class="title">
  <%= form_for(@ability, :url => pokemon_path(@ability), :method => 'delete') do |f| %>
    <div class="delete-question">
      <p>Are you sure you want to permanetly delete this ability?</p>
    </div>  
    <p><%=f.object.name%></p>
  
    <div class="form-buttons">
      <%= f.submit("Delete Ability") %>
    </div>
  <% end %>
</div>
